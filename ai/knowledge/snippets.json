{
  "animation-snippets": {
    "fade-in-on-scroll": {
      "code": "gsap.fromTo(element, { opacity: 0, y: 50 }, { opacity: 1, y: 0, duration: 0.6, scrollTrigger: { trigger: element, start: 'top 85%' } })",
      "use-case": "Card entrance animations"
    },
    "stagger-animation": {
      "code": "gsap.to(elements, { opacity: 1, y: 0, stagger: 0.1, duration: 0.6 })",
      "use-case": "Multiple elements animating in sequence"
    },
    "ripple-effect": {
      "code": "See assets/js/animations.js - initMicroInteractions() - button ripple",
      "use-case": "Button click feedback"
    }
  },
  "svg-animations": {
    "pulse": {
      "code": "@keyframes pulse { 0%, 100% { opacity: 1; transform: scale(1); } 50% { opacity: 0.8; transform: scale(1.05); } }",
      "use-case": "SVG icon animations"
    },
    "float": {
      "code": "@keyframes float { 0%, 100% { transform: translateY(0px); } 50% { transform: translateY(-5px); } }",
      "use-case": "Floating icon effect"
    }
  }
}
